<%= form_with(model: [section.book, section], local: true) do |form| %>
  <div class="form-field">
    <%= form.label :name, "Name"%>
    <%= form.text_field :name %>
  </div>

  <div class="form-field">
    <%= form.label :content, "Content" %> 
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= link_to  "Back", book_sections_path %>
    <%= form.submit %>
  </div>
<% end %>